            android:text="" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    </TableRow>    

    <View
        android:layout_height="2dip"
        android:background="#FF909090" />    

</TableLayout>